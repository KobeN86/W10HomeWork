{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Proportion of Energy from Renewable Sources (2000â€“2024)",
  "width": 1100,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "config": {
    "view": {"stroke": null},
    "background": "white",
    "title": {"fontSize": 22}
  },
  "params": [
    {
      "name": "YearSelection",
      "value": 2024,
      "bind": {
        "input": "range",
        "min": 2000,
        "max": 2024,
        "step": 1,
        "name": "Select Year: "
      }
    }
  ],
  "layer": [
    {
      "data": {"graticule": true},
      "mark": {"type": "geoshape", "stroke": "#888", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/3_choropleth_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "transform": [
        {
          "calculate": "datum.properties.NAME == 'United States of America' ? 'United States of America' : datum.properties.NAME == 'Czech Republic' ? 'Czechia' : datum.properties.NAME == 'Republic of the Congo' ? 'Congo' : datum.properties.NAME == 'Democratic Republic of the Congo' ? 'Congo' : datum.properties.NAME == 'South Korea' ? 'South Korea' : datum.properties.NAME == 'North Korea' ? 'North Korea' : datum.properties.NAME == 'Macedonia' ? 'North Macedonia' : datum.properties.NAME",
          "as": "CountryName"
        },
        {
          "lookup": "CountryName",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/KobeN86/W10HomeWork/refs/heads/main/data/wide_data.csv",
              "format": {"type": "csv"}
            },
            "key": "Country",
            "fields": ["1965","1966","1967","1968","1969","1970","1971","1972","1973","1974","1975","1976","1977","1978","1979","1980","1981","1982","1983","1984","1985","1986","1987","1988","1989","1990","1991","1992","1993","1994","1995","1996","1997","1998","1999","2000","2001","2002","2003","2004","2005","2006","2007","2008","2009","2010","2011","2012","2013","2014","2015","2016","2017","2018","2019","2020","2021","2022","2023","2024", "Country"]
          },
          "default": null
        },
        {
          "calculate": "datum[toString(YearSelection)]",
          "as": "Renewables"
        },
        {
          "calculate": "toNumber(datum.Renewables)",
          "as": "RenewablesNum"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
      "encoding": {
        "color": {
          "condition": {
            "test": "datum.RenewablesNum != null && !isNaN(datum.RenewablesNum)",
            "field": "RenewablesNum",
            "type": "quantitative",
            "scale": {
              "type": "linear",
              "range": ["#440154", "#21918c", "#5dc863", "#fde725"]
            },
            "title": "Renewable Energy (%)"
          },
          "value": "#cccccc"
        },
        "tooltip": [
          {"field": "properties.NAME", "type": "nominal", "title": "Country"},
          {"field": "YearSelection", "type": "quantitative", "title": "Year"},
          {
            "field": "RenewablesNum",
            "type": "quantitative",
            "format": ".2f",
            "title": "Renewables (%)"
          }
        ]
      }
    }
  ]
}