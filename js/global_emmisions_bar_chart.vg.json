{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": { "text": "CO₂ Emissions Per Country" },
  "width": 600,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/KobeN86/W10HomeWork/main/data/annual-co2-emissions-per-country.csv"
  },
  "params": [
    {
      "name": "country_selection",
      "value": ["Australia"],
      "bind": {
        "input": "select",
        "options": [
          "Australia", "China", "India", "United States", "United Kingdom", "Germany", "Brazil"
        ],
        "labels": [
          "Australia", "China", "India", "USA", "UK", "Germany", "Brazil"
        ],
        "name": "Select Country: "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year >= 1960" 
    },
    {
      "filter": "indexof(country_selection, datum.Entity) >= 0"
    }
  ],
  "mark": "area",
  "encoding": {
    "x": {
      "field": "Year",
      "type": "temporal",
      "title": "Year"
    },
    "y": {
      "field": "Emmisions",
      "type": "quantitative",
      "title": "CO₂ Emissions (tonnes)"
    },
    "color": {
      "field": "Entity",
      "type": "nominal",
      "title": "Country",
      "scale": {"scheme": "darkblue"}
    },
    "tooltip": [
      {"field": "Entity", "type": "nominal", "title": "Country"},
      {"field": "Year", "type": "temporal", "title": "Year", "format": "%Y"},
      {"field": "Emmisions", "type": "quantitative", "title": "CO₂ Emissions (tonnes)", "format": ",.0f"}
    ]
  }
}